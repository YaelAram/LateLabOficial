---
import { Image } from 'astro:assets';
import Bienvenida from '../assets/bienvenida_laboratorio.jpg';

interface Props {
  quienesSomos: string[]
}

const { quienesSomos } = Astro.props;
---

<article>
  <h2 id="quienes-somos">¿Quiénes somos?</h2>
  <div>
    <Image src={Bienvenida} alt="Imagen con los integrantes del laboratorio" loading="eager" />
    <div>
      { quienesSomos.map((parrafo) => (<p class="parrafo">{parrafo}</p>)) }
    </div>
  </div>
</article>

<style>
  img {
    width: 100%;
    height: auto;
  }

  @media screen and (width >= 920px) {
    article > div {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 16px;
    }
  }
</style>

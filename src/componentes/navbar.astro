---
import { Image } from "astro:assets";

import LogoLaboratorio from "@assets/logo_siglas_blanco.png";
---

<header class="primary">
  <div class="flex align-items-center">
    <button popovertarget="vertical-nav" type="button" class="primary">
      <img
        src="/menu.svg"
        alt="Icono de menú navegación"
        width={32}
        height={32}
        loading="eager"
      />
    </button>
    <a href="/" title="Ir a página principal" class="flex align-items-center">
      <span class="on-primary-font">LateLab</span>
      <Image
        src={LogoLaboratorio}
        alt="Logo del Laboratorio de Lenguaje y Análisis de Textos"
        width={32}
        height={32}
        loading="eager"
      />
    </a>
  </div>

  <nav popover="auto" id="vertical-nav" class="on-surface">
    <div class="flex justify-end">
      <button
        popovertarget="vertical-nav"
        type="button"
        aria-label="Close Menu"
        class="primary"
      >
        <img
          src="/close.svg"
          alt="Icono de cierre del menú de navegación"
          loading="eager"
          width={32}
          height={32}
        />
      </button>
    </div>
    <menu>
      <li>
        <a href="/#quienes-somos" class="secondary-font">¿Quiénes somos?</a>
      </li>
      <li><a href="/#miembros" class="secondary-font">Miembros</a></li>
      <li><a href="/#proyectos" class="secondary-font">Proyectos</a></li>
      <li>
        <a href="/#publicaciones" class="secondary-font">Publicaciones</a>
      </li>
      <li><a href="/#contactanos" class="secondary-font">Contactanos</a></li>
      <li>
        <a href="/#servicio-social" class="secondary-font">Servicio Social</a>
      </li>
    </menu>
  </nav>

  <nav id="horizontal-nav">
    <menu class="flex justify-end">
      <li>
        <a href="/#quienes-somos" class="on-secondary-font">¿Quiénes somos?</a>
      </li>
      <li><a href="/#miembros" class="on-secondary-font">Miembros</a></li>
      <li><a href="/#proyectos" class="on-secondary-font">Proyectos</a></li>
      <li>
        <a href="/#publicaciones" class="on-secondary-font">Publicaciones</a>
      </li>
      <li><a href="/#contactanos" class="on-secondary-font">Contactanos</a></li>
      <li>
        <a href="/#servicio-social" class="on-secondary-font">Servicio Social</a
        >
      </li>
    </menu>
  </nav>
</header>

<style>
  /* Estilos del Header, Titulo e Icono */
  header {
    padding: 8px 16px;
    position: fixed;
    top: 0;
    width: 100vw;
    box-sizing: content-box;
  }

  header > div > a {
    text-align: center;
  }

  header > div > a > span {
    font-size: x-large;
    margin: 0 4px 0 12px;
  }

  /* Estilos comunes para el menu vertical y horizontal */
  menu {
    list-style: none;
    padding: 0;
  }

  a {
    text-decoration: none;
    cursor: pointer;
  }

  a:hover {
    font-family: "MononokiNerdFontBold";
  }

  /* Menu Horizontal (Pantallas Grandes como la una una PC) */
  #horizontal-nav {
    display: none;
  }

  #horizontal-nav > menu {
    gap: 16px;
    margin-right: 48px;
  }

  #horizontal-nav a:hover {
    color: var(--on-primary-font-color);
  }

  /* Menu Vertical (Pantallas Moviles) */
  button {
    border: none;
    padding: 0;
    border-radius: 8px;
    cursor: pointer;
  }

  #vertical-nav {
    border: 0;
    position: fixed;
    inset: 0 auto auto 0;
    height: 100dvh;
    box-shadow: 0 0 25px 25px rgb(0 0 0 / 0.1);
    width: 220px;

    transition: translate 0.2s ease-in-out;
    transition-behavior: allow-discrete;

    &:popover-open {
      @starting-style {
        display: block;
        translate: -100% 0;
      }
    }
  }

  #vertical-nav > div {
    width: 100%;
  }

  #vertical-nav > menu {
    padding: 0 16px;
  }

  #vertical-nav > menu > li {
    margin-bottom: 16px;
    font-size: larger;
  }

  #vertical-nav a:hover {
    color: var(--primary-font-color);
  }

  @media screen and (width >= 1000px) {
    /* Estilos del Header, Titulo e Icono */
    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    header > div > a > span {
      margin: 0 4px 0 0;
    }

    /* Buton que abre el menu vertical (Pantallas Moviles) */
    button {
      display: none;
    }

    /* Estilos menu horizontal */
    #horizontal-nav {
      display: block;
    }
  }
</style>
